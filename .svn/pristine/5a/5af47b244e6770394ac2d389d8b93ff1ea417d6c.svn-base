/********* Style sheet for printing *********/

#main {
	width: 100%;
	background-color: #FFFFFF;
	border-bottom: 1px solid #000000;
	border-top: 1px solid #FFFFFF;
}
#main .print_link {
	display: none;
	line-height: 0;
}
#main_sidebar {
	display: none;
}
#main_content {
	position: relative;
	margin: 0 0 0 0;
	padding: 0 0 20px 0;
	background-color: white;
}
#main_content #breadcrumbs {
	display: none;
}

#skipnav {
	display: none;
}

/* ---------- Default styles for paragraphs and links ---------- */
	p {
		margin: 0 0 1em 0;
		color: #000000 !important;
	}
	h1, h2, h1, h4 {
		color: #000000 !important;
	}
	a {
		text-decoration: none;
		border-bottom: 0px none;
		color: #000;
	}
	img {
		border: 0px none;
	}

/* ==================== Header section ==================== */
	#header {
		width: 100%;
		height: 32px;
		padding-bottom: 0.5em;
		background-color: #FFFFFF;
		border-bottom: 1px solid #000000;
		background-image: none;
	}
	#header #logo_wrapper img {
		display: none;
	}
	#header #logo_wrapper #print_logo {
		display: block;
		margin: 0 0 0 13px;
	}
	#header #logo_wrapper #print_logo {
		display: none;
	}
	#header #search_wrapper {
		display: none;
	}

/* ==================== Page title section ==================== */
	#page_title {
		margin-bottom: 1.5em;
		border-bottom: 1px solid #000000;
	}
	#page_title h1 {
		margin: 0;
		padding: 0.4em 0 0.5em;
		font-family: georgia, "times new roman" , times, serif;
		font-weight: normal;
		font-size: 2.3em;
		color: #000000;
	}

/* ==================== Primary site navigation section ==================== */
	div.primary_nav {
		display: none;
	}

/* ==================== Main content section ==================== */

/* ---------- Widths for main content area ---------- */
	#main_content div.narrowest {
		width: 100px;
	}
	#main_content div.narrow {
		width: 160px;
	}
	#main_content div.middling {
		width: 200px;
	}
	#main_content div.medium {
		width: 260px;
	}
	#main_content div.wide {
		width: 360px;
	}
	#main_content div.widest {
		width: 420px;
	}
	
	#main_content div.image {
		margin-top: 1em;
	}

	#main_content div.image p {
		font-size: 0.8em;
	}

	#main_content div.spotlight {
		margin-bottom: 1em;
		border-top: 1px solid;
		border-bottom: 1px solid;
	}

	#main_content div.spotlight h3 {
		margin-top: 0.5em;
	}

	#main_content h1, #main_content h2, #main_content h3, #main_content h4 {
		margin: 0 0 0.5em;
		padding: 0;
	}

	#main_content h1 {
		font-size: 1.4em;
	}

	#main_content h2 {
		font-size: 1.2em;
	}

	#main_content h3 {
		font-size: 1.0em;
	}

	#main_content h4 {
		font-size: 0.8em;
	}

/* ==================== Footer section ==================== */
	#footer #contact_link {
		display: none;
	}

	#footer p {
		font-size: 0.8em;
	}


	.clearer {
		display: none;
	}


